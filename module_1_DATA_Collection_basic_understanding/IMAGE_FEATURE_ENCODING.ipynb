    "from scipy import misc\n",
    "img=misc.imread('img.png')\n",
    "img.shape\n",
    "img.dtype\n",
    "type(img)\n",
    "img=img[::2,::2]\n",
    "img\n",
    "img.shape\n",
    "img=(img/255.).reshape(-1,3)\n",
    "img\n",
    "r=img[:,0]\n",
    "g=img[:,1]\n",
    "b=img[:,2]\n",
    "gry=0.299*r+0.587*g+0.114*b\n",
    "gry.shape\n",
    "\n"
   ]
